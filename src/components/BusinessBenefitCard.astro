---
import { Image } from "astro:assets";
const { item, image } = Astro.props;
const { title, description } = item;
---

<div class="carousel-item">
  <div class="flex flex-col justify-start text-center">
    <Image
      src={image}
      alt={title}
      width={350}
      height={344}
      loading="lazy"
      class="rounded-box h-[344px] w-[350px] object-cover"
    />
    <div class="mt-2 w-87">
      <p class="text-2xl/8 font-bold text-black">
        {title}
      </p>
      <p class="text-syslate mt-3 text-base/5 font-semibold">
        {description}
      </p>
    </div>
  </div>
</div>
