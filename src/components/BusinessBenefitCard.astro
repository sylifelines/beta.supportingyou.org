---
import { Image } from "astro:assets";
const { item, index } = Astro.props;
const { image, title } = item.data;
const p = index > 0 ? index - 1 : 0;
const n = index < 3 ? index + 1 : 0;
const slide = "slide".concat(String(index));
const previous = "#slide".concat(String(p));
const next = "#slide".concat(String(n));
---

<div id={slide} class="carousel-item relative h-122">
  <Image
    src={image}
    alt={title}
    width={350}
    height={550}
    loading="lazy"
    class="rounded-box h-[550px] w-[350px] object-cover"
  />
  <div
    class="xs:hidden absolute top-1/2 right-5 left-5 flex -translate-y-1/2 transform justify-between"
  >
    <a href={previous} class="btn btn-circle">❮</a>
    <a href={next} class="btn btn-circle">❯</a>
  </div>
</div>
