---
import { getCollection } from "astro:content";
const lifelines = await getCollection("lifelines");
import { heading, subheading } from "@data/communityBenefits.json";
import BenefitCard from "@components/BenefitCard.astro";
---

<div
  class="z-10 flex flex-col items-center justify-center py-24 text-center sm:py-32"
>
  <div
    class="-mt-24 flex max-w-7xl flex-col items-center px-6 md:-mt-34 lg:px-8"
  >
    <div class="flex w-85 flex-col md:w-141">
      <h2 class="text-4xl font-semibold text-white sm:text-5xl">
        {heading}
      </h2>
      <p class="mt-6 text-lg/8 text-white">{subheading}</p>
    </div>
    <dl
      class="mt-16 grid grid-cols-1 gap-8 text-base/7 sm:grid-cols-2 lg:max-w-none lg:grid-cols-3"
    >
      {lifelines.map((lifeline) => <BenefitCard item={lifeline} />)}
    </dl>
  </div>
</div>
